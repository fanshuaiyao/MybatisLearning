<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.fan.mybatis.mapper.StudentMapper">
    <insert id="insertStudentByMap">
        insert into t_student(id,name,age,height,birth,sex)
        values (null,#{name},#{age},#{height},#{birth},#{sex})
    </insert>


    <!--    paramType参数的作用  告诉mybatis框架我的参数类型是什么类型
     mybatis自身框架有自己推断的机制  大部分不写
     给？传值的用  set什么
     mybatis实际上内置了很多别名
     -->
    <select id="selectById" resultType="student" parameterType="long">
        select
            id as id,
            name as name,
            age as age,
            height as height,
            birth as birth,
            sex as sex
        from t_student where id = #{id}
    </select>
    <select id="selectStudentByNameAndSex" resultType="student">
        select * from t_student where name = #{arg0} and sex = #{arg1}
    </select>
    <select id="selectStudentByNameAndSex2" resultType="org.fan.mybatis.pojo.Student">
        select * from t_student where name = #{name} and sex = #{sex}
    </select>
</mapper>
