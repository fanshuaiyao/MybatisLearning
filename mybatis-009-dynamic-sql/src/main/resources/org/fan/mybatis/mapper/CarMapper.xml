<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.fan.mybatis.mapper.CarMapper">

    <select id="selectCarById" resultType="org.fan.mybatis.pojo.Car">
        select
            id as id,
            car_num as carNum,
            brand as brand,
            guide_price as guidePrice,
            produce_time as produceTime,
            car_type as carType
        from t_car where id = #{id}
    </select>

    <select id="selectAll" resultType="org.fan.mybatis.pojo.Car">
        select
            id as id,
            car_num as carNum,
            brand as brand,
            guide_price as guidePrice,
            produce_time as produceTime,
            car_type as carType
        from t_car
    </select>


<!--    专门定义一个结果映射 使用这个映射来进行数据库字段和java类的属性名进行映射-->
    <resultMap id="carResultMap" type="Car">
<!--        如果数据库中有主键 一般都有 建议配置一个id标签  官方解释：提高效率-->
        <id property="id" column="id"/>
<!--        多配置一下 明确一下 就可以提高效率  因为不用做类型自动推断了-->
        <result property="carNum" column="car_num" jdbcType="VARCHAR" javaType="java.lang.String"/>
<!--        如果映射一样的话就可以省略-->
        <result property="brand" column="brand"/>
        <result property="guidePrice" column="guide_price"/>
        <result property="produceTime" column="produce_time"/>
        <result property="carType" column="car_type"/>
    </resultMap>

    <select id="selectByMultCondition" resultType="org.fan.mybatis.pojo.Car">
        SELECT *
        FROM t_car
            <!-- where标签中的if如果都不成立那就不会生成where  还能帮我们去除某些条件前面的多余的and或者or-->
        <where>
<!--             test 条件为true时候执行  test中用什么来判断：有param的时候用指定的名称   没有则是param1   pojo的话就是用属性名称-->
            <if test="brand != null and brand != ''">
                brand LIKE CONCAT('%', #{brand}, '%')
            </if>
            <if test="guidePrice != null">
                AND guide_price &gt; #{guidePrice}
            </if>
            <if test="carType != null and carType != ''">
                AND car_type = #{carType}
            </if>
        </where>
    </select>
</mapper>
